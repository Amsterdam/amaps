{
  "name": "amaps",
  "private": true,
  "type": "module",
  "scripts": {
    "build:web": "vite build --config vite.config.ts",
    "build:embed": "vite build --config vite.config.embed.ts",
    "build": "npm run build:embed && npm run build:web && npm run merge:dist",
    "merge:dist": "mkdir -p app/dist && cp -r app/dist-embed/* app/dist/ && cp -r public/* app/dist/",
    "dev": "vite",
    "test": "vitest run --coverage",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc"
  },
  "dependencies": {
    "@amsterdam/design-system-css": "^2.0.1",
    "@amsterdam/design-system-react": "^2.1.0",
    "@amsterdam/design-system-react-icons": "^1.1.1",
    "@react-router/node": "^7.9.3",
    "@react-router/serve": "^7.9.3",
    "@testing-library/jest-dom": "^6.9.1",
    "emitonoff": "^0.1.1",
    "geojson": "^0.5.0",
    "isbot": "^5.1.31",
    "leaflet": "^1.9.4",
    "leaflet.pattern": "^0.1.0",
    "proj4": "^2.19.10",
    "react": "^19.1.1",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.5",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/geojson": "^7946.0.16",
    "@types/jest": "^30.0.0",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitest/coverage-v8": "^3.2.4",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^27.1.0",
    "npm-check-updates": "^19.1.2",
    "react-router-devtools": "^5.1.3",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
